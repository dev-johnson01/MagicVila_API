@model IEnumerable<MagicVilla_Web.Models.Dto.VilaNumberDTO>

<br />

<div class="container p-4 border">

    <div class="row pt-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i>Create New Villa Number</a>

        </div>

    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Vila.Name
                    </td>
                    <td>@item.VilaNo</td>
                   
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" class="btn btn-success text-endaccesskey=" asp-route-villaNo="@item.VilaNo"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" class="btn btn-danger text-end" asp-route-villaNo="@item.VilaNo"><i class="bi bi-trash3"></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
